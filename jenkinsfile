pipeline {
  environment {
    registry = "neetishdocker/docker-test"
    registryCredential = 'Brgpk@3217d'
    dockerImage = 'docker.build registry + ":$BUILD_NUMBER"'
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/neetishaws/neetish.aws-gmail.com.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
    stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $registry:$BUILD_NUMBER"
      }
    }
  }
}
